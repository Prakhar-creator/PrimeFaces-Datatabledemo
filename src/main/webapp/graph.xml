<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 600 200">
  <!-- Nodes -->
  <!-- Vehicle -->
  <circle cx="300" cy="40" r="20" fill="skyblue" />
  <text x="300" y="40" text-anchor="middle" alignment-baseline="middle">Vehicle</text>
  
  <!-- Car -->
  <circle cx="180" cy="120" r="20" fill="skyblue" />
  <text x="180" y="120" text-anchor="middle" alignment-baseline="middle">Car</text>
  
  <!-- Truck -->
  <circle cx="300" cy="120" r="20" fill="skyblue" />
  <text x="300" y="120" text-anchor="middle" alignment-baseline="middle">Truck</text>
  
  <!-- Bike -->
  <circle cx="420" cy="120" r="20" fill="skyblue" />
  <text x="420" y="120" text-anchor="middle" alignment-baseline="middle">Bike</text>
  
  <!-- Hatchback -->
  <circle cx="120" cy="200" r="20" fill="skyblue" />
  <text x="120" y="200" text-anchor="middle" alignment-baseline="middle">Hatchback</text>
  
  <!-- Sedan -->
  <circle cx="240" cy="200" r="20" fill="skyblue" />
  <text x="240" y="200" text-anchor="middle" alignment-baseline="middle">Sedan</text>
  
  <!-- Swift -->
  <circle cx="60" cy="280" r="20" fill="skyblue" />
  <text x="60" y="280" text-anchor="middle" alignment-baseline="middle">Swift</text>
  
  <!-- i10 -->
  <circle cx="180" cy="280" r="20" fill="skyblue" />
  <text x="180" y="280" text-anchor="middle" alignment-baseline="middle">i10</text>
  
  <!-- Edges -->
  <!-- Vehicle to Car -->
  <line x1="300" y1="40" x2="180" y2="100" stroke="red" stroke-width="2" />
  <!-- Vehicle to Truck -->
  <line x1="300" y1="40" x2="300" y2="100" stroke="red" stroke-width="2" />
  <!-- Vehicle to Bike -->
  <line x1="300" y1="40" x2="420" y2="100" stroke="red" stroke-width="2" />
  <!-- Car to Hatchback -->
  <line x1="180" y1="120" x2="120" y2="180" stroke="red" stroke-width="2" />
  <!-- Car to Sedan -->
  <line x1="180" y1="120" x2="240" y2="180" stroke="red" stroke-width="2" />
  <!-- Hatchback to Swift -->
  <line x1="120" y1="200" x2="60" y2="260" stroke="red" stroke-width="2" />
  <!-- Hatchback to i10 -->
  <line x1="120" y1="200" x2="180" y2="260" stroke="red" stroke-width="2" />
</svg>

